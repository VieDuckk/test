@model IEnumerable<LamLaiTX2Lan2.Models.HocSinh>

@{
    ViewBag.Title = "Xem danh sách";
}

<h2>Xem dach sách</h2>

<p>
    @Html.ActionLink("Tạo mới", "ThemDulieu")
</p>
@using (Html.BeginForm())
            {
                @Html.Label("Tìm kiếm theo sbd")
                @Html.TextBox("tim")
                <input type="submit" value="Tìm" />
            }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sbd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LopHoc.tenlop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hoten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.anhduthi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.diemthi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sbd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LopHoc.tenlop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hoten)
        </td>
        <td>
            @{string path = "~/Images/" + item.anhduthi; }
            <img src="@Url.Content(path)" alt="anh" width="100" height="100" />
            @Html.DisplayFor(modelItem => item.anhduthi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diemthi)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.sbd }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id = item.sbd }) |
            @Html.ActionLink("Xoá", "XoaDulieu", new { id = item.sbd })
        </td>
    </tr>
}

</table>
